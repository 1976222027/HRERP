<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_missionTitle"
            style="@style/BlackText.Medium17"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tv_name"
            android:lines="1"/>

        <TextView
            android:id="@+id/tv_time"
            style="@style/BlackText.standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_type"
            android:layout_below="@+id/tv_type"
            android:gravity="center_vertical"
            android:textColor="@color/topbar_3"
            android:textSize="@dimen/common_textSize_default14"/>

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/textHintColor"
            android:textSize="@dimen/common_textSize_default10"/>
    </RelativeLayout>


</RelativeLayout>
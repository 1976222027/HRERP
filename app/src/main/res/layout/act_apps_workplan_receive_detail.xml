<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg_examination"
              android:orientation="vertical">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar_common_itt"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/notice_detail_bg_common"
            android:orientation="vertical">
            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_workplan_title"
                style="@style/BlackText.Large20"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:lines="1"
                />
            <!-- 时间-->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/textHintColor"
                android:textSize="@dimen/common_textSize_default12"/>
            <!-- 发送人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/sendPerson"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>

                <TextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>
            </LinearLayout>

            <!-- 计划进度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/targetAdvance"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>

                <TextView
                    android:id="@+id/tv_advance"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start|top"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>
            </LinearLayout>

            <!-- 完成时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/completeTime"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>

                <TextView
                    android:id="@+id/tv_completeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start|top"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>
            </LinearLayout>


            <!-- 内容-->
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/textHintColor"
                android:textSize="@dimen/common_textSize_default12"
                />
            <!-- 完成时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/remark_all_apl"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start|top"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default12"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
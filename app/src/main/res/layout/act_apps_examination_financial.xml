<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg_examination"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/topbar_common_itt"/>

    <RelativeLayout
        android:id="@+id/btn_loan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@mipmap/bg_finance"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="28dp"
            android:background="@mipmap/finance_loan"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv_typeName_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_position"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:text="@string/financial_loan"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textSize_default18"/>

        <View
            android:id="@+id/view_position"
            android:layout_width="10dp"
            android:layout_height="1dip"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_go_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_typeName_loan"
            android:layout_below="@+id/tv_typeName_loan"
            android:layout_marginEnd="28dp"
            android:drawablePadding="5dp"
            android:drawableEnd="@mipmap/finance_forword"
            android:gravity="center_vertical"
            android:text="@string/financial_start"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textSize_default12"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_reimburse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@mipmap/bg_finance"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="28dp"
            android:background="@mipmap/finance_reimburse"
            android:contentDescription="@null"
            />

        <TextView
            android:id="@+id/tv_typeName_remburse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_position2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:text="@string/financial_reimburse"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textSize_default18"/>

        <View
            android:id="@+id/view_position2"
            android:layout_width="10dp"
            android:layout_height="1dip"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_go_remburse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_typeName_remburse"
            android:layout_below="@+id/tv_typeName_remburse"
            android:layout_marginEnd="28dp"
            android:drawablePadding="5dp"
            android:drawableEnd="@mipmap/finance_forword"
            android:gravity="center_vertical"
            android:text="@string/financial_start"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textSize_default12"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@mipmap/bg_finance">

        <TextView
            android:id="@+id/tv_typeName_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_position4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:text="@string/financial_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textSize_default18"/>

        <View
            android:id="@+id/view_position4"
            android:layout_width="10dp"
            android:layout_height="1dip"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_go_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_typeName_pay"
            android:layout_below="@+id/tv_typeName_pay"
            android:layout_marginEnd="28dp"
            android:drawablePadding="5dp"
            android:drawableEnd="@mipmap/finance_forword"
            android:gravity="center_vertical"
            android:text="@string/financial_start"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textSize_default12"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_typeName_pay"
            android:layout_marginStart="28dp"
            android:background="@mipmap/finance_pay"
            android:contentDescription="@null"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>
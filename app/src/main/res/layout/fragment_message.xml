<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg_examination"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>
            <!-- 通知-->
            <RelativeLayout
                android:id="@+id/layout_notification"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/img_msg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/app_notification"/>
                <!-- 标题-->
                <TextView
                    android:id="@+id/tv_msgTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_msg"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_msg"
                    android:text="@string/msg_msgTitle"
                    android:textColor="#000000"
                    android:textSize="@dimen/common_textSize_default17"/>

                <!-- 内容-->
                <TextView
                    android:id="@+id/tv_msgContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_msg"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_msg"
                    android:text="没有最新通知"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default14"/>
                <!-- 时间-->
                <TextView
                    android:id="@+id/tv_msgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_msgTitle"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="@dimen/common_textSize_default11"/>

                <com.huirong.widget.CircleTextView
                    android:id="@+id/msg_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/img_msg"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/common_topbar_bgcolor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>

            <!-- 公告-->
            <RelativeLayout
                android:id="@+id/layout_notice"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/img_notice"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/msg_notice"/>
                <!-- 标题-->
                <TextView
                    android:id="@+id/tv_noticeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_notice"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_notice"
                    android:text="@string/msg_noticeTitle"
                    android:textColor="#000000"
                    android:textSize="@dimen/common_textSize_default17"/>

                <!-- 内容-->
                <TextView
                    android:id="@+id/tv_noticeContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_notice"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_notice"
                    android:text="没有最新公告"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default14"/>
                <!-- 时间-->
                <TextView
                    android:id="@+id/tv_noticeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_noticeTitle"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="@dimen/common_textSize_default11"/>

                <com.huirong.widget.CircleTextView
                    android:id="@+id/notice_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/img_notice"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/common_topbar_bgcolor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>

            <!-- 未办事项-->
            <RelativeLayout
                android:id="@+id/layout_undo"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/img_undo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/menu_notify_undo"
                    android:contentDescription="@null"
                    android:textColor="@color/textHintColor"/>
                <!-- 标题-->
                <TextView
                    android:id="@+id/tv_undoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_undo"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_undo"
                    android:text="@string/msg_undoTitle"
                    android:textColor="#000000"
                    android:textSize="@dimen/common_textSize_default17"/>
                <!-- 内容-->
                <TextView
                    android:id="@+id/tv_undoContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_undo"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_undo"
                    android:text="没有未办事项"
                    android:textSize="@dimen/common_textSize_default14"/>
                <!-- 时间-->
                <TextView
                    android:id="@+id/tv_undoTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_undoTitle"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="@dimen/common_textSize_default11"/>

                <com.huirong.widget.CircleTextView
                    android:id="@+id/undo_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/img_undo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/common_topbar_bgcolor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>

            <!-- 抄送给我-->
            <RelativeLayout
                android:id="@+id/layout_copy"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/img_copy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/msg_copy"
                    android:contentDescription="@null"
                    android:textColor="@color/textHintColor"/>
                <!-- 标题-->
                <TextView
                    android:id="@+id/tv_copyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_copy"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_copy"
                    android:text="@string/msg_copy"
                    android:textColor="#000000"
                    android:textSize="@dimen/common_textSize_default17"/>
                <!-- 内容-->
                <TextView
                    android:id="@+id/tv_copyContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_copy"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_copy"
                    android:text="暂无抄送消息"
                    android:textSize="@dimen/common_textSize_default14"/>

                <!-- 时间-->
                <TextView
                    android:id="@+id/tv_copyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_copyTitle"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="@dimen/common_textSize_default11"/>

                <com.huirong.widget.CircleTextView
                    android:id="@+id/copy_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/img_copy"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/common_topbar_bgcolor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>

            <RelativeLayout
                android:id="@+id/layout_mission"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/img_mission"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/msg_conference"/>
                <!-- 标题-->
                <TextView
                    android:id="@+id/tv_missionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_mission"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_mission"
                    android:text="@string/msg_mission"
                    android:textColor="#000000"
                    android:textSize="@dimen/common_textSize_default17"/>

                <!-- 内容-->
                <TextView
                    android:id="@+id/tv_missionContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_mission"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_mission"
                    android:text="暂无任务"
                    android:textColor="@color/textHintColor"
                    android:textSize="@dimen/common_textSize_default14"/>
                <!-- 时间-->
                <TextView
                    android:id="@+id/tv_missionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_missionTitle"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="@dimen/common_textSize_default11"/>

                <com.huirong.widget.CircleTextView
                    android:id="@+id/mission_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/img_mission"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/common_topbar_bgcolor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>

            <!-- 工作计划 -->
            <RelativeLayout
                android:id="@+id/layout_workplan"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/img_workplan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/ic_launcher"
                    android:contentDescription="@null"
                    android:textColor="@color/textHintColor"/>
                <!-- 标题-->
                <TextView
                    android:id="@+id/tv_workplanTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_workplan"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_workplan"
                    android:text="@string/msg_workplan"
                    android:textColor="#000000"
                    android:textSize="@dimen/common_textSize_default17"/>

                <!-- 内容-->
                <TextView
                    android:id="@+id/tv_workplanContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_workplan"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_workplan"
                    android:text="没有需要查看的工作计划"
                    android:textSize="@dimen/common_textSize_default14"/>
                <!-- 时间-->
                <TextView
                    android:id="@+id/tv_workplanTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_workplanTitle"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="@dimen/common_textSize_default11"/>

                <com.huirong.widget.CircleTextView
                    android:id="@+id/workplan_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/img_workplan"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/common_topbar_bgcolor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>

            <!-- 日程-->
            <RelativeLayout
                android:id="@+id/layout_schedule"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/img_schedule"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/app_schedule"
                    android:contentDescription="@null"
                    android:textColor="@color/textHintColor"/>
                <!-- 标题-->
                <TextView
                    android:id="@+id/tv_scheduleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_schedule"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_schedule"
                    android:text="@string/msg_schedule"
                    android:textColor="#000000"
                    android:textSize="@dimen/common_textSize_default17"/>
                <!-- 内容-->
                <TextView
                    android:id="@+id/tv_ScheduleContains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_schedule"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_schedule"
                    android:text="没有日程安排"
                    android:textSize="@dimen/common_textSize_default14"/>
                <!-- 时间-->
                <TextView
                    android:id="@+id/tv_scheduleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_scheduleTitle"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="@dimen/common_textSize_default11"/>

                <com.huirong.widget.CircleTextView
                    android:id="@+id/schedule_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/img_schedule"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/common_topbar_bgcolor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/common_bg_examination_line"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
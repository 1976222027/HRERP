<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/common_bg_examination">

        <TextView

            android:id="@+id/tv_finace_title"
            style="@style/BlackText.standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_time"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/tv_time"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/common_textSize_default17"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_finace_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:text="2017-02-03 11:12:13"
            android:textColor="@color/textHintColor"
            android:textSize="@dimen/common_textSize_default10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@color/common_bg_examination_line"
            android:id="@+id/view2"/>

        <TextView
            android:id="@+id/tv_type"
            style="@style/BlackText.standard"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="类型"
            android:textColor="@color/textHintColor"
            android:textSize="@dimen/common_textSize_default14"
            android:layout_below="@+id/tv_finace_title"
            android:layout_above="@+id/view2"
            android:layout_alignStart="@+id/tv_finace_title"/>
    </RelativeLayout>


</RelativeLayout>